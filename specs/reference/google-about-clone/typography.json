{
  "fontFamily": {
    "display": ["Plus Jakarta Sans", "Google Sans", "Inter", "system-ui", "sans-serif"],
    "body": ["Inter", "Google Sans Text", "system-ui", "sans-serif"]
  },

  "scale": {
    "h1": {
      "desktop": {
        "fontSize": "60px",
        "lineHeight": "72px",
        "fontWeight": 400,
        "letterSpacing": "-0.5px"
      },
      "mobile": {
        "fontSize": "36px",
        "lineHeight": "44px",
        "fontWeight": 400,
        "letterSpacing": "normal",
        "textAlign": "center"
      }
    },
    "h2": {
      "desktop": {
        "fontSize": "36px",
        "lineHeight": "44px",
        "fontWeight": 400
      },
      "mobile": {
        "fontSize": "28px",
        "lineHeight": "36px",
        "fontWeight": 400
      }
    },
    "h3": {
      "desktop": {
        "fontSize": "24px",
        "lineHeight": "32px",
        "fontWeight": 500
      },
      "mobile": {
        "fontSize": "20px",
        "lineHeight": "28px",
        "fontWeight": 500
      }
    },
    "body": {
      "large": {
        "fontSize": "18px",
        "lineHeight": "28px",
        "fontWeight": 400
      },
      "default": {
        "fontSize": "16px",
        "lineHeight": "24px",
        "fontWeight": 400
      },
      "small": {
        "fontSize": "14px",
        "lineHeight": "20px",
        "fontWeight": 400
      }
    },
    "card": {
      "title": {
        "fontSize": "20px",
        "lineHeight": "28px",
        "fontWeight": 400
      }
    },
    "nav": {
      "fontSize": "16px",
      "fontWeight": 500
    },
    "button": {
      "fontSize": "16px",
      "fontWeight": 500
    },
    "label": {
      "fontSize": "12px",
      "lineHeight": "16px",
      "fontWeight": 500,
      "letterSpacing": "0.5px",
      "textTransform": "uppercase"
    }
  },

  "color": {
    "heading": "#202124",
    "body": "#5f6368",
    "nav": "#5f6368",
    "navActive": "#202124"
  }
}
